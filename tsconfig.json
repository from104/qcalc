{
  "extends": "@quasar/app-vite/tsconfig-preset.json",
  "compilerOptions": {
    "module": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "stores/*": ["src/stores/*"],
      "classes/*": ["src/classes/*"],
      "capacitor/*": ["src-capacitor/node_modules/*"]
    },
  },
  "include": [
    "./**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ext",
    "types/**/*.d.ts",
    "src-pwa/*.d.ts",
    "src-bex/*.d.ts",
    "src-ssr/*.d.ts",
    "src-capacitor/*.d.ts",
    "src-electron/electron-main.js"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
